{% extends 'front/common/base.html.twig' %}

{% block title %}
    Soins
{% endblock %}

{% block body %}

    <section class="healthcareMainSection displayFlexCenter">
        <div class="container">
            <div>
                <h1 class="fading healthcareTitle textCenter">Les différents soins proposés</h1>
            </div>
            <div class="displayFlexBetween healthcareResp healthcareWrap">
                {% for healthcare in healthcare %}
                    <div class="healthcareHealthcares">
                        <h3 class="fading healthcareTitles">{{ healthcare.wording}}</h3>
                        <div class="fading healthcareJustifyResp">
                            <img class="imgResp imgHome yellowBorder" src="{{ asset('uploads/healthcare/'~healthcare.picture) }}" alt="photo des soins">
                        </div>
                        <p class="fading healthcareCenterResp">{{ healthcare.price.value }} €</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

{% endblock %}