<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="{{ asset('dist/css/front/style.css') }}">
    <link href="https://fonts.googleapis.com/css?family=Montserrat|Raleway&display=swap" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="{{ asset('src/js/app.js') }}"></script>
    <title>{% block title %}Welcome !{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <header class="xLarge-12 large-12 medium-12 small-12 header">
        <div class="container">
            <div class="xLarge-12 large-12 medium-12 small-12 displayFlex">
                <div class="xLarge-2 large-2 medium-2 small-2">
                    <a id="haut" href="{{ path('home') }}"><img class="imgResp logo" src="{{ asset('uploads/pictures/whiteLogo3.png') }}" alt=""></a>
                </div>
                <div class="xLarge-10 large-10 medium-10 small-10 allMenus">
                    <nav>
                        <ul class="headerContact xLarge-12 large-12 medium-12 small-12">
                            <li>06 28 54 22 31</li>
                            <li class="yellowTitle"><a target="_blank" href="https://www.doctolib.fr/pedicure-podologue/poissy/gary-leymarie?fbclid=IwAR08MKktbbNWJqiuJEVl89xJ5sW64oEZSBh5FmOe3bK7eYIS932Gxi5bMwY">Prendre rendez-vous</a></li>
                            <li class="homeLocalisation"><a target="_blank" href="https://www.google.fr/maps/place/6+Rue+du+Petit+March%C3%A9,+78300+Poissy/@48.9298665,2.0371226,17z/data=!3m1!4b1!4m5!3m4!1s0x47e68969024b6509:0x12f864687f2a1d70!8m2!3d48.9298665!4d2.0393113">Localisation</a></li>
                        </ul>
                    </nav>
                    <nav>
                        <ul class="headerMenu xLarge-12 large-12 medium-12 small-12">
                            <li><a class="btnHeaderLogin {% if app.request.get('_route') == 'home' %}currentPath{% endif %}" href="{{ path('home') }}">accueil</a></li>
                            <li><a class="btnHeaderLogin {% if app.request.get('_route') == 'articles' %}currentPath{% endif %}{% if app.request.get('_route') == 'article' %}currentPath{% endif %}" href="{{ path('articles') }}">Articles</a></li>
                            <li><a class="btnHeaderLogin {% if app.request.get('_route') == 'protocol' %}currentPath{% endif %}" href="{{ path('protocol') }}">Protocole</a></li>
                            <li><a class="btnHeaderLogin {% if app.request.get('_route') == 'healthcare' %}currentPath{% endif %}" href="{{ path('healthcare') }}">Soins</a></li>
                            <li>{% if app.user %}<a class="btnHeaderLogin" href="{{ path('app_logout') }}">Logout</a> {% else %} <a class="btnHeaderLogin {% if app.request.get('_route') == 'app_login' %}currentPath{% endif %}" href="{{ path('app_login') }}">Login</a> {% endif %}</li>                        </ul>
                    </nav>
                </div>
            </div>

        </div>
    </header>

    {% block body %}
    {% endblock %}

    {% block javascripts %}
    {% endblock %}

    <footer class="xLarge-12 large-12 medium-12 small-12 footer">
        <div class="container displayFlex">
            <div class="xLarge-4 large-4 medium-4 small-4">
                <div>
                    <p class="noMargin">Gary Leymarie</p>
                </div>
                <div>
                    <p class="noMargin">6 rue du petit marché</p>
                </div>
                <div>
                    <p class="noMargin">78 300 POISSY</p>
                </div>
            </div>
            <div class="xLarge-4 large-4 medium-4 small-4">
                <div class="divLogoFooter displayFlex">
                    <img class="imgResp logo2" src="{{ asset('uploads/pictures/whiteLogo3.png') }}" alt="">
                </div>
            </div>
            <div class="xLarge-4 large-4 medium-4 small-4">
                <nav class="footerBloc3 displayFlex">
                    <ul>
                        <li><a>Contact</a></li>
                        <li><a class="legal" href="{{ path('legal') }}">Mentions légales</a></li>
                        <li><a href="#haut" class="yellowTitle">Retour vers le haut</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </footer>

    <script src="{{ asset('src/js/app.js') }}"></script>
</body>
</html>