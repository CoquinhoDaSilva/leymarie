{% extends 'front/common/base.html.twig' %}

{% block title %}
    Protocole
{% endblock %}

{% block body %}
    <div class="displayFlexCenter">
        <div class="container">
            <h1 class="protocolTitle">Le protocole</h1>
            {% for protocol in protocol %}
                <div>
                    <div class="displayFlexCenter fading">
                        <div class="protocolImg displayFlexCenter fading">
                            <img class="imgResp" src="{{ asset('uploads/pictures/' ~ protocol.picture) }}" alt="">
                        </div>
                    </div>
                    <div class="protocolWording">
                        {{ protocol.wording | nl2br }}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}