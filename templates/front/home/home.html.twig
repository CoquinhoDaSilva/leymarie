{% extends 'front/common/base.html.twig' %}

{% block title %}
    Accueil
{% endblock %}

{% block body %}
    {% if alertMessage %}
        {% for alertMessage in alertMessage %}
            <div class="bDesktop12 desktop12 lDesktop12 bTablet12 tablet12 phone12 alertMessage">
                <div class="bDesktop1 desktop1 lDesktop1">
                    <img class="iconAlertMessage imgResp" src="{{ asset('uploads/pictures/'~alertMessage.picture) }}">
                </div>
                <p>{{ alertMessage.wording }}</p>
            </div>
        {% endfor %}
    {% endif %}


