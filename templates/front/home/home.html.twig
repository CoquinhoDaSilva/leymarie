    <main class="backgroundImage displayFlexCenter">
        <div class="bDesktop12 desktop12 lDesktop12 homePresentationWhite">
            <h2 class="name">GARY LEYMARIE</h2>
            <div class="homeCertification">
                <p class="noMargin">Podologue-pédicure D.E</p>
                <p class="noMargin">Podologie du sport D.U</p>
            </div>
            <div class="homePresentationInfos">
                <p class="noMargin">6 rue du petit marché</p>
                <p class="noMargin">78 300 Poissy</p>
                <p class="noMargin">Ouvert du Lundi au Samedi de :</p>
                <p class="noMargin">09h30 à 19h</p>
            </div>
        </div>
    </main>

    <section class="homeSection">
        <div>
            <h2 class="homeTitles textCenter">Les axes de soins</h2>
        </div>
        <div class="displayFlexCenter">
            <div class="container displayFlexBetween">
                {% for category in categories %}
                    <a class="homeCategoryDiv bDesktop3 desktop3 lDesktop3" href="{{ path('category', {'id':category.id}) }}">
                        <div>
                            <h3 class="homeTitlesSub textCenter">{{ category.name }}</h3>
                            <div>
                                <img class="homeCategoryImg imgResp" src="{{ asset('uploads/pictures/'~category.picture) }}" alt="" title="">
                            </div>
                            <p class="textJustify">{{ category.wording }}</p>
                        </div>
                    </a>
                {% endfor %}
            </div>
        </div>
    </section>

    <section>
        <div class="displayFlexCenter blueBg">
            <div class="container homeConsultation">
                <h2 class="homeTitles textCenter">{{ blocOne.title }} ?</h2>
                {% if blocOne.picture %}
                    <div class="displayFlexCenter">
                        <div class="bDesktop5 desktop5 lDesktop5">
                            <img class="imgResp" src="{{ asset('uploads/pictures/'~blocOne.picture) }}" alt="{{ blocOne.altpicture }}" title="{{ blocOne.titlepicture }}">
                        </div>
                    </div>
                {% endif %}
                <div class="homeConsultationText">
                    <p class="textJustify">{{ blocOne.content | raw }}</p>
                </div>
            </div>
        </div>
    </section>


    <section class="homeSection homeArticle displayFlexCenter">
        <div class="container">
            <div>
                <h2 class="homeTitles textCenter">Les derniers articles</h2>
            </div>
            <div class="displayFlexBetween">
                {% for article in lastarticles %}
                    <div class="bDesktop3 desktop3 lDesktop3">
                        <div>
                            <h3 class="homeArticlesTitles">{{ article.title }}</h3>
                        </div>
                        <div class="bDesktop12 desktop12 lDesktop12">
                            <img class="homeArticleImg" src="{{ asset('uploads/pictures/'~ article.picture) }}" alt="">
                        </div>
                        <div>
                            <p>{{ article.subtitles }}</p>
                        </div>
                        <div class="displayFlexCenter">
                            <p class="btn1 homeArticleBtn"><a href="{{ path('article', {'id':article.id}) }}">Lire l'article</a></p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
    <section class="homeSectionBorder">
        <div class="blueBg displayFlexCenter">
            <div class="container homeTarifs">
                <h2 class="homeTitles textCenter">Tarifs</h2>
                <div class="displayFlexAround">
                    {% for tarif in tarifs %}
                        {% if tarif.active %}
                        <div>
                            <p class="homeTitlesSub yellowTitle">{{ tarif.name }} : </p>
                            {% for healthcare in healthcare %}
                                {% if healthcare.category.name == tarif.name %}
                                    <p>{{ healthcare.wording }} : <span>{{ healthcare.price }} €</span></p>
                                {% endif %}
                            {% endfor %}
                        </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>

    <section class="homeSection carteVitale">
        <h2 class="homeTitles textCenter">{{ blocTwo.title }}</h2>
        <div class="displayFlexCenter">
            <div class="container">
                {% if blocTwo.picture %}
                    <div class="displayFlexCenter">
                        <div class="bDesktop5 desktop5 lDesktop5">
                            <img class="imgResp" src="{{ asset('uploads/pictures/'~blocTwo.picture) }}" alt="{{ blocTwo.altpicture }}" title="{{ blocTwo.titlepicture }}">
                        </div>
                    </div>
                {% endif %}
                <p class="textJustify">{{ blocTwo.content | raw }}</p>
            </div>
        </div>
    </section>

{% endblock %}