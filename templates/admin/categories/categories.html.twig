{% extends 'admin/common/base.html.twig' %}

{% block title %}
   Catégories
{% endblock %}

{% block body %}
   <section>
      <p class="textCenter infoGary">Toutes les catégories existantes que ce soit pour le listing des soins ou pour l'affichage des tarifs à la page d'accueil</p>
      <div class="displayFlexCenter">
         <div class="menuBdd container displayFlex">
            {% for category in categories %}
               <div class="article bDesktop5 desktop5 lDesktop5 bTablet5 tablet12 phone12">
                  <h2 class="textCenter">{{ category.name }}</h2><span>{% if category.active%} affiché dans la grille de tarifs {% else%} n'apparait pas dans la grille des tarifs {% endif %}</span>
                  <div>
                     {% if category.picture %}
                        <img class="imgResp" src="{{ asset('uploads/pictures/' ~ category.picture) }}" alt="">
                     {% endif %}
                  </div>
                  <div>
                     <p class="textCenter">{{ category.wording }}</p>
                  </div>
                  <div class="menuCrud displayFlex">
                     <div>
                        <p class="btnUpdate"><a href="{{ path('admin_update_category', {'id':category.id}) }}">Modifier</a></p>
                     </div>
                  </div>
               </div>
            {% endfor %}
         </div>
      </div>
   </section>
{% endblock %}