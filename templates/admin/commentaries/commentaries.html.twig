{% extends 'admin/common/base.html.twig' %}

{% block body %}

    <div>
        <form name="search" action="{{ path('admin_search_commentary') }}" method="get">
            <input type="search" name="search">
            <input type="submit" value="Rechercher">
        </form>
    </div>

    <section class="displayFlexCenter">
        <div class="menuBdd container displayFlex">
            {% for commentary in commentaries %}
                <div class="commentaries xLarge-5 large-5 medium-6 small-12">
                    <a href="{{ path('admin_commentary', {'id':commentary.id}) }}">
                        <div>
                            <div>
                                <p class="menuBddTitle textCenter">Article : {{ commentary.article.title }}</p>
                            </div>
                            <div>
                                <p class="menuBddTitle commentaryComment">{{ commentary.comment }}</p>
                            </div>
                            <div>
                                <p class="menuBddTitle commentaryDateName">{{ commentary.user.firstname }} {{ commentary.user.name }} - {{ commentary.date|date ('d m Y') }}</p>
                            </div>
                        </div>
                    </a>
                    <div class="menuCrud displayFlex">
                        <div>
                            <p class="update"><a href="{{ path('admin_update_commentary', {'id':commentary.id}) }}">Modifier</a></p>
                        </div>
                        <div>
                            <p class="delete"><a href="{{ path('admin_delete_commentary', {'id':commentary.id}) }}">Supprimer</a></p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

{% endblock %}