{% extends 'admin/common/base.html.twig' %}

{% block body %}
    <div class="displayFlexCenter">
        <div class="container">
            {% for protocol in protocol %}
                <div>
                    <div>
                        <h2 class="articleTitle">Protocole</h2>
                    </div>
                    <div class="displayFlexCenter">
                        <div class="xLarge-6">
                            <img class="imgResp" src="{{ asset('uploads/pictures/' ~ protocol.picture) }}" alt="">
                        </div>
                    </div>
                    <div class="articleBorderContent">
                        <p>{{ protocol.wording | nl2br}}</p>
                    </div>
                </div>
                <div class="menuCrud displayFlex">
                    <div>
                        <p class="update"><a href="{{ path('admin_update_protocol', {'id':protocol.id}) }}">Modifier</a></p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}