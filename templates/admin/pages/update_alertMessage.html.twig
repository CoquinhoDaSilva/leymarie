{% extends ('admin/common/base.html.twig') %}

{% block title %}
    Ajouter un message d'alerte
{% endblock %}

{% block body %}
    <main>
        {% if alertMessage %}
            <div class="displayFlexCenter">
                <div class="container displayFlexCenter">
                    <div class="adminAlertMessage displayFlexCenter">
                        <div class="bDesktop1 desktop1 lDesktop1">
                            <img class="imgResp" src="{{ asset('uploads/pictures/'~alertMessage.picture) }}">
                        </div>
                        <p>{{ alertMessage.wording }}</p>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="displayFlexCenter">
                <p class="textCenter">Aucun message d'alerte n'est affich√©</p>
            </div>
        {% endif %}
        <div class="displayFlexCenter">
            <div>
                {{ form_start(formAlert) }}
                <div>
                    {{ form_widget(formAlert.picture) }}
                </div>
                <div>
                    {{ form_errors(formAlert.picture) }}
                </div>
                <div>
                    {{ form_label(formAlert.wording) }}
                </div>
                <div>
                    {{ form_widget(formAlert.wording) }}
                </div>
                <div>
                    {{ form_errors(formAlert.wording) }}
                </div>
                <div class="displayFlexCenter">
                    {{ form_widget(formAlert.submit) }}
                </div>
                {{ form_end(formAlert) }}
            </div>
        </div>
    </main>
{% endblock %}