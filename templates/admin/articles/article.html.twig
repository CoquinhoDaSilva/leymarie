{% extends 'admin/common/base.html.twig' %}

{% block title %}
    Article
{% endblock %}

{% block body %}
    <div class="displayFlexCenter">
        <div class="container">
            <div>
                <div>
                    <h2 class="articleTitle">{{ article.title }}</h2>
                </div>
                <div class="displayFlexCenter">
                    <div class="xLarge-6">
                        <img class="imgResp" src="{{ asset('uploads/pictures/' ~ article.picture) }}" alt="">
                    </div>
                </div>
                <div class="displayFlexCenter">
                    <div>
                        <p>{{ article.user.firstname }} {{ article.user.name }}</p>
                    </div>
                    <div>
                        <p> - </p>
                    </div>
                    <div>
                        <p>{{ article.date|date('d m Y') }}</p>
                    </div>
                </div>
                <div class="articleBorderContent">
                    <p>{{ article.content | nl2br}}</p>
                </div>
            </div>
            <div class="menuCrud displayFlex">
                <div>
                    <p class="update"><a href="{{ path('admin_update_article', {'id':article.id}) }}">Modifier</a></p>
                </div>
                <div>
                    <p class="delete"><a href="{{ path('admin_delete_article', {'id':article.id}) }}">Supprimer</a></p>
                </div>
            </div>
            <div class="articleForm">
                <div>
                    {% for commentary in commentaries %}
                        <div class="articleFormCommentary">
                            <div>
                                <p class="articleComment">“{{ commentary.comment | nl2br}}”<p>
                            </div>
                            <div class="articleAuthorRight">
                                <span class="articleFormAuthor">{{ commentary.user.firstname }} {{ commentary.user.name }} -</span>
                                <span class="articleFormDate">{{ commentary.date|date('d m Y') }}</span>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
