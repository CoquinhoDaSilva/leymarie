{% extends 'admin/common/base.html.twig' %}

{% block title %}
    Articles
{% endblock %}

{% block body %}
    <div class="container">
        <div class="searchBar">
            <form name="search" action="{{ path('admin_search_article') }}" method="get">
                <input type="search" name="search">
                <input type="submit" value="Rechercher">
            </form>
        </div>
    </div>

    <section class="displayFlexCenter">
        <div class="menuBdd container displayFlex">
                {% for article in articles %}
                    <div class="article bDesktop5 desktop5 lDesktop5 bTablet5 tablet12 phone12">
                        <div>
                            <h2 class="menuBddTitle textCenter"><a href="{{ path('admin_article', {'id':article.id}) }}">{{ article.title }}</a></h2>
                        </div>
                        <div>
                            {% if article.picture %}
                                <a href="{{ path('admin_article', {'id':article.id}) }}"><img class="imgResp" src="{{ asset('uploads/pictures/' ~ article.picture) }}" alt=""></a>
                            {% endif %}
                        </div>
                        <div class="menuCrud displayFlex">
                            <div>
                                <p class="btnView"><a href="{{ path('admin_article', {'id':article.id}) }}">Voir</a></p>
                            </div>
                            <div>
                                <p class="btnUpdate"><a href="{{ path('admin_update_article', {'id':article.id}) }}">Modifier</a></p>
                            </div>
                            <div>
                                <p class="btnDelete"><a href="{{ path('admin_delete_article', {'id':article.id}) }}">Supprimer</a></p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
        </div>
    </section>

{% endblock %}