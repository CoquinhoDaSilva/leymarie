{% extends 'admin/common/base.html.twig' %}

{% block title %}
    Utilisateur
{% endblock %}

{% block body %}
    <div class="displayFlexCenter">
        <div class="container">
            <div>
                <div>
                    <h2 class="articleTitle">{{ user.firstname }} {{ user.name }}</h2>
                </div>
                <div class="displayFlexCenter">
                    <div>
                        <div>
                            <p>{{ user.email }}</p>
                        </div>
                        <div>
                            <p>{{ user.phone }}</p>
                        </div>
                        <div>
                            {% for role in user.roles %}
                                <p>{{ role }}</p>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="menuCrud displayFlex">
                <div>
                    <p class="update"><a href="{{ path('admin_update_user', {'id':user.id}) }}">Modifier</a></p>
                </div>
                <div>
                    <p class="delete"><a href="{{ path('admin_delete_user', {'id':user.id}) }}">Supprimer</a></p>
                </div>
            </div>

        </div>
    </div>
{% endblock %}