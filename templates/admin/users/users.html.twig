{% extends 'admin/common/base.html.twig' %}

{% block title %}
    Utilisateurs
{% endblock %}

{% block body %}

    <section class="displayFlexCenter">
        <div class="menuBdd container displayFlex">
            {% for user in users %}
                <div class="users xLarge-5 large-5 medium-6 small-12">
                    <div>
                        <p class="menuBddTitle textCenter"><a href="{{ path('admin_user', {'id':user.id}) }}">{{ user.firstname }} {{ user.name }}</a></p>
                    </div>
                    <div>
                        <p class="menuBddTitle textCenter"><a href="{{ path('admin_user', {'id':user.id}) }}">{{ user.email }}</a></p>
                    </div>
                    <div class="menuCrud displayFlex">
                        <div>
                            <p class="update"><a href="{{ path('admin_update_user', {'id':user.id}) }}">Modifier</a></p>
                        </div>
                        <div>
                            <p class="delete"><a href="{{ path('admin_delete_user', {'id':user.id}) }}">Supprimer</a></p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

{% endblock %}